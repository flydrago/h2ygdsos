	<select id="getWechatActivity" parameterType="long" resultMap="wechatactivityDaoMap">
		select * from tb_wechat_activity where id = #{id}
	</select>
	
	<select id="getStartWechatActivity" parameterType="hashmap" resultMap="wechatactivityDaoListMap">
		SELECT
			id,
			name,
			description,
			keyword,
			create_date,
			start_date,
			end_date,
			CONCAT(root_path,relative_path,disk_file_name) as path
		FROM
			tb_wechat_activity
		WHERE
			activity_type = #{activityType}
		AND unit_id = #{unitId}
		and activity_status = 0
		and ((if_set_date = 1 and start_date &lt; NOW()) or if_set_date = 0)
		and end_date &gt; NOW()
	</select>
	
	
	
	
	
	<!-- 根据activityId得到活动对应的奖项列表 -->
	<select id="getPrizeListByActivityId" parameterType="long" resultMap="wechatactivityprizeDaoMap">
		SELECT
			*
		FROM
			tb_wechat_activity_prize 
		where activity_id = #{activityId} order by prize_rate asc
	</select>
	
	<!-- 根据activityId得到活动对应的奖项列表 -->
	<select id="getShowPrizeListByActivityId" parameterType="long" resultMap="wechatactivityprizeDaoMap">
		SELECT
			*
		FROM
			tb_wechat_activity_prize 
		where activity_id = #{activityId} order by ord desc
	</select>
	
	
	<select id="getActivityHisRowsByLimitType" parameterType="hashmap" resultType="long">
		select 
			count(id)
		from 
		tb_wechat_activity_his 
		where activity_id = #{activityId}
		and member_id = #{memberId}
		<if test="limitFlag == 0">
			and DATE(create_date) = curdate()
		</if>
	</select>
	
	<select id="getHitPrizeRowsByActivityId" parameterType="hashmap" resultType="long">
	
		select 
			count(id)
		from 
		tb_wechat_activity_his 
		where activity_id = #{activityId}
		and prize_id = #{prizeId}
	</select>

	<select id="getOneStartWechatActivity" parameterType="hashmap" resultMap="wechatactivityDaoMap">
		select * from tb_wechat_activity 		
		WHERE
			activity_type = #{activityType}
		AND unit_id = #{unitId}
		and activity_status = 0
		and ((if_set_date = 1 and start_date &lt; NOW()) or if_set_date = 0)
		and end_date &gt; NOW()
		order by create_date desc
		limit 0,1
	</select>
	
</mapper>