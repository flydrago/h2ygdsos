	</update>

	
	
	
	<update id="updateGoodsCountByGoodsPriceId" parameterType="hashmap">
		update tb_spirit_room_goods_rt
		set
		<choose>
			<when test="op == 'add'">
				goods_count = goods_count+#{count}
			</when>
			<otherwise>
				goods_count = goods_count-#{count}
			</otherwise>
		</choose>
		where room_code = #{roomCode} and goods_price_id = #{goodsPriceId}
	</update>
	
	
	
