		unit_id = #{unitId,jdbcType=BIGINT},
		unit_type = #{unitType,jdbcType=INTEGER},
		zone_code = #{zoneCode,jdbcType=VARCHAR},
		goods_nick_name = #{goodsNickName,jdbcType=VARCHAR},
