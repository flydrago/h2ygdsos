.container-fluid{
	padding-left: 20px;
	padding-right: 20px;
}

.vali_head{
	margin-top: 5px;
}

.vali_head #jyd_logo{
	margin-left: auto;
	margin-right: auto;
}

.vali_main{
	margin-top: 10px;	
}

.vali_main #vali_declare{
	color: #9C9A5E;
	font-size: 24px;
}

.jumbotron{
	background-color:#FFFDA1;
    padding: 20px 10px;
}

.form-control{
	height: 50px;
}

#vali_veriCode{
	height: 45px;
}

#vali_veriCode #veriCode_Btu{
	height: 50px;
	width: 48%;
	float:left;
}

#vali_veriCode #veriCode_input{
	width: 48%;
	float: right;
}

.vali_submit{
	margin-top: 0px;
	margin-bottom: 10px;
}

.vali_submit #validation_Btu{
	height: 50px;
	background-image: url("../imgs/validation/btu_validate.png");
	border-color: #20B0DF;
	background-repeat: no-repeat;
	background-color: #20b0df;
}

#vali_phone .input-group-addon{
	width: 50px;
	height: 50px;
}

#vali_phone .input-group{
	width: 100%;
}

.resultMessage{
    width:80%;
    margin-left:10%;
    border-radius:10px;
    position: fixed;
    bottom:65%;
    text-align: center;
    background: rgba(0,0,0,0.6);
    line-height: 20px;
    color: #fff;
    padding: 10px;
    display:none;
}

